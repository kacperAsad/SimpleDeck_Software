<Window x:Class="SimpleDeck_Windows_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="600"
        Width="850"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        xmlns:viewModel="clr-namespace:SimpleDeck_Windows_App.ViewModel"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.DataContext>
        <viewModel:MainVM />
    </Window.DataContext>

    <Grid>
        <Border Background="#212529"
                CornerRadius="20" />
        <Grid>
            <!--//   BaseGrid   //-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="622" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock
                Text="Grejem"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Foreground="White"
                FontSize="22"
                Margin="22, 0, 0, 0" />

            <StackPanel Grid.Column="0" Grid.Row="1">
                <RadioButton
                    Content="Connection"
                    Height="50"
                    Foreground="White"
                    FontSize="14"
                    Style="{StaticResource MenuButtonTheme}"
                    IsChecked="True"
                    Command="{Binding ConnectionViewCommand}" />

                <RadioButton
                    Content="Bindings"
                    Height="50"
                    Foreground="White"
                    FontSize="14"
                    Style="{StaticResource MenuButtonTheme}"
                    Command="{Binding BindingsViewCommand}" />

                <RadioButton
                    Content="Settings"
                    Height="50"
                    Foreground="White"
                    FontSize="14"
                    Style="{StaticResource MenuButtonTheme}"
                    Command="{Binding SettingsViewCommand}" />

                <RadioButton
                    Content="About"
                    Height="50"
                    Foreground="White"
                    FontSize="14"
                    Style="{StaticResource MenuButtonTheme}"
                    Command="{Binding AboutViewCommand}" />

            </StackPanel>

            <Grid Grid.Column="1" Grid.Row="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />

                </Grid.ColumnDefinitions>
                <!--
                <TextBox Width="250"
                         Height="40"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Left"
                         Margin="5"

                         Style="{StaticResource ModernTextBox}" />
                -->
                <Border CornerRadius="5"
                        Background="Transparent"
                        Height="40"
                        HorizontalAlignment="Left" VerticalAlignment="Center"
                        BorderThickness="2">
                    <TextBox Background="Transparent"
                             Height="40"
                             BorderThickness="0"
                             FontSize="23"
                             Foreground="AntiqueWhite"
                             Padding="10, 2, 10, 0"
                             VerticalAlignment="Center"
                             Text="Simple Deck Configuration"/>
                </Border>
                
                <Border Grid.Column="1"
                        CornerRadius="5"
                        Background="#353340"
                        Width="20" Height="20"
                        HorizontalAlignment="Right" VerticalAlignment="Top"
                        Margin="0, 15, 0, 0 ">

                    <Grid>
                        <Rectangle StrokeThickness="1" />
                        <Button Background="Transparent"
                                Foreground="#CFCFCF"
                                BorderThickness="0"
                                Click="ExitButtonClick"
                                OverridesDefaultStyle="True">

                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">

                                                <Border x:Name="root"
                                                        Background="{TemplateBinding Background}"
                                                        CornerRadius="5">

                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center" />
                                                </Border>

                                                <ControlTemplate.Triggers>

                                                    <!-- ANIMACJA HOVER -->
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Trigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <ColorAnimation Storyboard.TargetName="root"
                                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                            To="#10FFFFFF"
                                                                            Duration="0:0:0.4" />
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.EnterActions>

                                                        <Trigger.ExitActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <ColorAnimation Storyboard.TargetName="root"
                                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                            To="Transparent"
                                                                            Duration="0:0:0.4" />
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.ExitActions>
                                                    </Trigger>

                                                    <!-- ANIMACJA CLICK -->
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Trigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <ColorAnimation Storyboard.TargetName="root"
                                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                            To="#20FFFFFF"
                                                                            Duration="0:0:0.2" />
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.EnterActions>

                                                        <Trigger.ExitActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <ColorAnimation Storyboard.TargetName="root"
                                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                            To="Transparent"
                                                                            Duration="0:0:0.3" />
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.ExitActions>
                                                    </Trigger>

                                                </ControlTemplate.Triggers>

                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>


                            <Image Source="/Images/Close.png" />
                        </Button>

                    </Grid>
                </Border>
            </Grid>


            <ContentControl Grid.Row="1"
                            Grid.Column="1"
                            Margin="10"
                            Content="{Binding CurrentView}" />


        </Grid>
    </Grid>

</Window>